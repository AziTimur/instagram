<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <ImageView
        android:id="@+id/img_post_tv"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:background="@drawable/img_news"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />
    <TextView
        android:id="@+id/commentPost_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:paddingStart="5dp"
        android:text="joshua_l The game in Japan was amazing and I want to share some photos"
        app:layout_constraintTop_toBottomOf="@id/img_post_tv"
        app:layout_constraintStart_toStartOf="parent"
        />
<TextView
        android:id="@+id/dataPost_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
    android:text="September 19"
    android:layout_marginTop="5dp"
        app:layout_constraintTop_toBottomOf="@id/commentPost_tv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>





</androidx.constraintlayout.widget.ConstraintLayout>